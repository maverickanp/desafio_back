{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",                        
    "module": "CommonJS",
    "strict": true,                         
    "esModuleInterop": true,                
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.spec.ts"]
}
